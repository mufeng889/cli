{
  "name": "@ohh/cli",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@9.9.0",
  "description": "Ohh's command line tools",
  "author": {
    "name": "Ohh",
    "email": "1509326266@qq.com",
    "url": "https://github.com/mufeng889"
  },
  "license": "MIT",
  "homepage": "https://github.com/mufeng889/cli.git",
  "repository": {
    "url": "https://github.com/mufeng889/cli.git.git"
  },
  "bugs": {
    "url": "https://github.com/mufeng889/cli.git/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "Ohh": "dist/index.js",
    "ohh": "dist/index.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup && pnpm build-pkg",
    "build-pkg": "pnpm -r --filter='./packages/*' run build",
    "cleanup": "ohh cleanup",
    "commit": "ohh git-commit",
    "commit:zh": "ohh git-commit -l=zh-cn",
    "lint": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "ohh release -e 'pnpm release-execute'",
    "release-execute": "tsx ./scripts/release.ts && pnpm ohh changelog",
    "stub": "pnpm -r run stub",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "update-pkg": "ohh update-pkg"
  },
  "dependencies": {
    "@soybeanjs/changelog": "0.3.24",
    "bumpp": "9.8.1",
    "c12": "2.0.1",
    "cac": "6.7.14",
    "consola": "3.2.3",
    "enquirer": "2.4.1",
    "execa": "9.5.1",
    "kolorist": "1.8.0",
    "npm-check-updates": "17.1.11",
    "rimraf": "6.0.1"
  },
  "devDependencies": {
    "@soybeanjs/cli": "link:",
    "@soybeanjs/eslint-config": "1.4.2",
    "@types/node": "22.9.0",
    "eslint": "9.14.0",
    "eslint-plugin-vue": "9.31.0",
    "fast-glob": "3.3.2",
    "lint-staged": "15.2.10",
    "simple-git-hooks": "2.11.1",
    "tsup": "8.3.5",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "vue-eslint-parser": "9.4.3"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm ohh git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
